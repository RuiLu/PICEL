int convolution(pic a, mat kernel)
{
/*
unable to verify whether kernel is a 3*3 matrix 
*/
pic temp=newpic(a.w,a.h);

int size=3;
int s1=size/2;

kernel[3][1] = 1;

for(int i=0;i<a.w;i++)
{
  for(int j=0;j<a.h;j++)
  {
    for(int x=0;x<size;x++)
    {
	for(int y=0;y<size;y++)
        {
          int r=0;
	  int g=0;
	  int b=0;
	  int i1=i+x-s1;
	  int j1=j+y-s1;
	  if((i1<0) or (i1>=a.w) or (j1<0) or (j1>=a.h))
	  {
	    r=a.r[i][j]; 
	    g=a.g[i][j];
	    b=a.b[i][j];
	  }else
	  {
	    r=a.r[i1][j1]; 
	    g=a.g[i1][j1];
	    b=a.b[i1][j1];
	  }
	  int tempr = temp.r[i][j];
	  int tempg = temp.g[i][j];
	  int tempb = temp.b[i][j];

	  temp.r[i][j]=tempr+r*kernel[x][y];
	  temp.g[i][j]=tempg+g*kernel[x][y];
	  temp.b[i][j]=tempb+b*kernel[x][y];
        }
    }
  }
}

int tot=0;
for(int i=0;i<size;i++)
{
  for(int j=0;j<size;j++)
  {
    tot=tot+kernel[i][j];
    print(kernel[i][j]);
  }
}

if(tot!=0)
{
  for(int i=0;i<a.w;i++)
  {
    for(int j=0;j<a.h;j++)
    {
      int tempr = temp.r[i][j];
      int tempg = temp.g[i][j];
      int tempb = temp.b[i][j];
      temp.r[i][j]=tempr/tot;
      temp.g[i][j]=tempg/tot;
      temp.b[i][j]=tempb/tot;
    }
  }
}


for(int i=0;i<a.w;i++)
{
  for(int j=0;j<a.h;j++)
  {
    a.r[i][j]=temp.r[i][j];
    a.g[i][j]=temp.g[i][j];
    a.b[i][j]=temp.b[i][j];
  }
}

/*
delete(temp);
*/
}
